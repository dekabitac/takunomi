
<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-12">
        <div class= "right">
          <% if @customer == current_customer %>
            <%= link_to "編集", edit_public_customer_path, class: "btn btn-success" %>
          <% end %>
        </div>
        <h1 class= "user-name">
          <%= image_tag @customer.get_profile_image(80,80) %>
          <%= @customer.user_name %>
          </h1>
      </div>
    </div>
    <div class= "row">
      <% @posts.each do |post| %>
      <div class="col-3 post-index">
        <div class= "border rounded">
          <tr>
            <th class= "post-image">
              <%= link_to public_post_path(post.id) do %>
                <% if post.image.attached? %>
                  <%= image_tag post.image, size: "225x225" %>
                <% else %>
                  <%= image_tag 'no_image', size: "225x225" %>
                <% end %>
              <% end %>
            </th>
          </tr>
          <tr>
            <th>
              <div class= "post-text"><%= post.post_text %></div>
            </th>
          </tr>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</main>