<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-6">
        <h2 class= "border rounded bg-secondary">新規登録</h2>
      </div>
    </div>
    <div class= "row">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
        <div class= "col-12">
          <table class= "table">
            <tr>
              <th><%= f.label "メールアドレス" %></th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <th><%= f.label "ユーザーネーム(15文字以内)" %></th>
              <td><%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %></td>
            </tr>
            <tr>
              <th>
                <%= f.label "パスワード" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
              </th>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <th><%= f.label "パスワード確認用" %></th>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <th></th>
              <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
            </tr>
            <tr>
              <th></th>
              <td><%= link_to "ログインはこちら＞", new_customer_session_path %></td>
            </tr>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</main>
