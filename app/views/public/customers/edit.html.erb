<main>
  <div class= "container px-5 px-sm-0">
    <div class= "row">
      <div class= "col-md-12">
        <div class= "center-block">
          <h2 class= "title">情報編集</h2>
          <%= form_with model: @customer, url: public_customer_path(@customer.id) do |customer| %>
          <table class="table">
            <tr>
              <th>ユーザーネーム</th>
              <td><%= customer.text_field :user_name %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= customer.text_field :email %></td>
            </tr>
            <tr>
              <th></th>
              <td><%= customer.submit"編集内容を保存", class: "btn btn-primary" %></td>
            </tr>
          </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>