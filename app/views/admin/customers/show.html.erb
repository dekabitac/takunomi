<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-lg-10">会員詳細</div>
      <table class= "table">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>ユーザーネーム</th>
          <td><%= @customer.user_name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_deleted == true %>
              <div class= "text-danger">退会</div>
            <% else %>
              <div class= "text-success">有効</div>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= link_to "編集する",  edit_admin_customer_url(@customer.id), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "投稿一覧", public_customer_path(@customer.id) %></td>
        </tr>
      </table>
    </div>
  </div>
</main>